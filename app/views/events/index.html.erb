<div class="main-content">
  <div class="cards">
    <div class="row">
      <% @events.each do |event| %>
          <div class="col-4">
          <%= link_to event_path(event) do %>
          <div class="card mb-4">
            <div class="img-download">
              <img class="card-img-top" src="http://kitt.lewagon.com/placeholder/cities/rio" alt="Card image cap">
              <%= link_to events_path do %> <%# Implement modal to show more information #%>
                <i class="far fa-eye"></i>
              <% end %>
            </div>
            <div class="event-body">
              <div class="event-main-content d-flex justify-content-between mb-2">
                <h5 class="event-name"><%= event.name %></h5>
                <h5 class="event-name">â‚¬<%= event.price %>0</h5>
              </div>
                <h6 class="card-subtitle text-muted mb-2"><%= event.description.first(40)%>...</h6>
                <div class="event-main-content d-flex justify-content-between mt-2">
                  <p class="card-subtitle text-muted"><%= event.category %></p>
                  <p class="card-subtitle text-muted"><%#= event.day.date %></p>
                </div>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div id="map"
    <% @events.each do |event| %>
      <% if event.latitude.present? && event.longitude.present?  %>
        style="width: 900%; height: 100vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      <% end %>
    <% end %>
  </div>
</div>
