<div class="container">
  <!-- multistep form -->
  <%# <form id="msform"> %>
  <%= simple_form_for @review, html: { class: "msform" }  do |f| %>
    <!-- progressbar -->
    <ul id="progressbar">
      <li class="active">Create an event</li>
      <li>Price and People</li>
      <li>Final details</li>
    </ul>
    <!-- fieldsets -->
    <fieldset>
      <h2 class="fs-title">Let's add an event</h2>
      <h3 class="fs-subtitle">Enter a name and the category of your event.</h3>
      <%= f.input :rating,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Name" } %>
      <%= f.input :content,
                  required: true,
                  # collection: Event::CATEGORIES,
                  autofocus: true,
                  input_html: { autocomplete: "Category" } %>
      <%# <%= f.button :submit, "Next", class:'btn btn-outline-success next' %>
      <%= f.button :submit, "Submit", class:'btn btn-outline-success' %>
    </fieldset>
  <% end %>
  <%# </form> %>
</div>
